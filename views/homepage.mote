<div class="text-center">
  <h1>Welcome to the ping pong tournament system</h1>
  % unless this.current_user
    <div class="d-flex justify-content-center">
      <form method="post" action="/login">
        <input type="text" name="username" placeholder="Username" class="row">
        <input type="password" name="password" placeholder="Password" class="row mt-2">
        <button type="submit" class="btn btn-primary btn-block mt-2">login</button>
      </form>
    </div>
% end
</div>